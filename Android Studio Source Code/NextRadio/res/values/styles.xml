<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="MaterialDialogSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>
    <style name="com_mixpanel_android_SurveyActivityTheme" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/com_mixpanel_android_SurveyActivityAnimation</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="NotificationContent" parent="@android:style/TextAppearance.StatusBar.EventContent" />
    <style name="NotificationTitle" parent="@android:style/TextAppearance.StatusBar.EventContent.Title" />
    <style name="AlertDialogCustom" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColor">@color/nextradio_blue</item>
    </style>
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar" />
    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="NotificationAction">
        <item name="android:gravity">center|right</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:padding">@dimen/notification_action_padding</item>
        <item name="android:layout_width">@dimen/notification_action_width</item>
        <item name="android:layout_height">@dimen/notification_action_height</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="NotificationAction.Collapse" parent="@style/NotificationAction">
        <item name="android:src">@drawable/btn_notification_collapse</item>
    </style>
    <style name="NotificationAction.Next" parent="@style/NotificationAction">
        <item name="android:src">@drawable/btn_playback_next</item>
        <item name="android:contentDescription">@string/notification_next</item>
    </style>
    <style name="NotificationAction.Play" parent="@style/NotificationAction">
        <item name="android:src">@drawable/btn_playback_play</item>
        <item name="android:contentDescription">@string/notification_play</item>
    </style>
    <style name="NotificationAction.Previous" parent="@style/NotificationAction">
        <item name="android:visibility">gone</item>
        <item name="android:src">@drawable/btn_playback_previous</item>
        <item name="android:contentDescription">@string/notification_prev</item>
    </style>
    <style name="NotificationText">
        <item name="android:ellipsize">end</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TextAppearance.ShowcaseView.Detail" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="TextAppearance.ShowcaseView.Title" parent="@android:style/TextAppearance">
        <item name="android:textSize">24.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffeeeeee</item>
    </style>
    <style name="Theme.IAPTheme" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="WelcomeContentAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/welcome_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="WelcomeHeadingAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/welcome_heading</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="com_mixpanel_android_SurveyActivityAnimation">
        <item name="android:windowEnterAnimation">@anim/com_mixpanel_android_fade_in</item>
        <item name="android:windowExitAnimation">@anim/com_mixpanel_android_fade_out</item>
    </style>
    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="navigation_header">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#ffaaaaaa</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginTop">18.0dip</item>
        <item name="android:layout_marginBottom">6.0dip</item>
    </style>
    <style name="navigation_item">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/nav_listitem_text</item>
        <item name="android:background">@drawable/nav_listitem_background</item>
        <item name="android:paddingLeft">30.0dip</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
    </style>
    <style name="scrollDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/scrollDialogSheetAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="scrollDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    </style>
    <style name="station_genre_header">
        <item name="android:textSize">23.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginTop">8.0dip</item>
        <item name="android:layout_marginRight">8.0dip</item>
        <item name="android:layout_marginBottom">8.0dip</item>
    </style>
</resources>
